        <label target="title">Title:</label>
        <input id="title" name="title" class="form-control" value="<%= @book.title %>" required>
      </div>
      <div class="form-group">
        <label target="author_first_name">Author First Name:</label>
        <input name="author_first_name" class="form-control" value="<%= @book.author(:first_name) %>" required>
      </div>
