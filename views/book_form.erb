<h1 class="page-header text-center">Add a New Book</h1>

<div class="row move-down">
  <div class="col-sm-6 col-sm-offset-3">
    <form action="/books" method="post">
      <div class="form-group">
        <label target="title">Title:</label>
        <input id="title" name="title" class="form-control" autofocus required>
      </div>
      <div class="form-group form-inline">
        <input id="first_name1" name="first_name1" class="form-control" placeholder="First Author's First Name:" required>
        <input id="last_name1" name="last_name1" class="form-control" placeholder="First Author's Last Name:" required>
      </div>
      <div class="form-group form-inline">
        <input id="first_name2" name="first_name2" class="form-control" placeholder="Second Author's First Name:" required>
        <input id="last_name2" name="last_name2" class="form-control" placeholder="Second Author's Last Name:" required>
      </div>
      <button type="submit" class="btn btn-primary">Add</button>
    </form>
  </div>
</div>

