<h1 class="page-header text-center">Add a New Book</h1>

<div class="row move-down">
  <div class="col-sm-6 col-sm-offset-3">
    <form action="/books" method="post">
      <div class="form-group">
        <label target="title">Title:</label>
        <input id="title" name="title" class="form-control" autofocus required>
      </div>
      <div class="form-group">
        <label target="first_name">Author's First Name:</label>
        <input id="first_name" name="first_name" class="form-control" required>
      </div>
      <div class="form-group">
        <label target="last_name">Author's Last Name:</label>
        <input id="last_name" name="last_name" class="form-control" required>
      </div>

      <button type="submit" class="btn btn-primary">Add</button>
    </form>
  </div>
</div>

