<h1 class="page-header text-center">Books</h1>

<div class="row move-down">
  <div class="col-sm-6 col-sm-offset-3">
    <form action="/books" method="post">
      <div class="form-inline">
        <div class="form-group">
          <!--<label target="title" class="">Please search for a book:</label>-->
          <input id="title" name="title" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Search!</button>
      </div>
    </form>
  </div>
</div>
<br>
<div class="row move-down">
  <div class="col-sm-6 col-sm-offset-3">
    <% if Book.all.empty? %>
      <p class="lead">The library is currently empty. <a href="/books/new">Add a book.</a></p>
    <% elsif @found_books.any? %>
      <ul>
        <% @found_books.each() do |book| %>
          <li><a href="#"><%= book.title() %></a></li>
        <% end %>
      </ul>    
    <% else %>
      <p class="lead">Sorry, no books match your search.</p>
    <% end %>
  </div>
</div>
