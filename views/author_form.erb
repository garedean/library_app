<h1 class="page-header text-center">Add a New Author</h1>

<form action="/authors" method="post">
  <div class="form-group">
    <label target="first_name">First Name:</label>
    <input id="first_name" name="first_name" class="form-control" autofocus required>
  </div>
  <div class="form-group">
    <label target="last_name">Author's Last Name:</label>
    <input id="last_name" name="last_name" class="form-control" required>
  </div>

  <button type="submit" class="btn btn-primary">Add</button>
</form>
